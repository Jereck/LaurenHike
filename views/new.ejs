<% include partials/header %>

<div class="container">
    <h1>Create New Folder</h1>    
    <div class="row">
        <form class="col s12 m9 l8" action="/hikes" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Hike Name" id="hike_name" type="text" class="validate" name="name">
                </div>
                <div class="input-field col s12">
                    <textarea class="materialize-textarea" placeholder="Description..." name="description"></textarea>
                </div>
                <div class="input-field col s12">
                    <input placeholder="Folder Image" id="folder_image" type="text" class="validate" name="folder_image">
                </div>
                <div class="file-field input-field col s12">
                    <div class="btn">
                        <span>File</span>
                        <input  name="images" type="file" multiple>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload one or more files">
                    </div>
                </div>
            </div>
            <button class="btn" type="submit">Submit</button>
        </form>
    </div>
</div>


<% include partials/footer %>