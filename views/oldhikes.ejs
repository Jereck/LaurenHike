<% include partials/header %>

<div class="row center-align img-box">
    <% hikes.forEach(function(hike){ %>
        <div class="col s12 m4 l3">
            <div class="card">
                <div class="card-image">
                    <img class="responsive-img" src="<%= hike.folder_image %>">
                </div>
                <div class="card-content">
                    <a href="/oldhikes/<%= hike._id%>" class="black-text">
                        <span class="card-title"><%= hike.name %></span>
                    </a>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<% include partials/footer %>